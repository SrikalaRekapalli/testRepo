{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "adminUsername": {
        "type": "string",
        "defaultValue": "sandboxadmin",
        "metadata": {
          "description": "Admin Username of Virtual Machine to SSH or RDP"
        }
      },
      "adminPassword": {
        "type": "securestring",
        "defaultValue": "Sysgain123!",
        "metadata": {
          "description": "Admin Password of Virtual Machine to SSH or RDP"
        }
      },
      "sandboxName": {
        "type": "string",
        "defaultValue": "SysgainSandbox",
        "metadata": {
          "description": "Name of the Sandbox"
        }
      },
      "location": {
        "type": "string",
        "defaultValue": "West US",
        "allowedValues": [
            "Brazil South",
            "East Asia",
            "East US",
            "Japan East",
            "Japan West",
            "North Central US",
            "North Europe",
            "South Central US",
            "West Europe",
            "West US",
            "Southeast Asia",
            "Central US",
            "East US 2"
        ],
        "metadata": {
            "description": "Network Security Group Deployment Location"
        }
    },
    "virtualMachines-api-version": {
      "type": "string",
      "defaultValue": "2015-06-15",
      "metadata": {
        "description": "API Version for the Compute Resources"
      }
    },
    "tag": {
      "type": "object",
      "defaultValue": {
        "key1": "Virtual Machine",
        "value1": "Hortonworks"
      },
      "metadata": {
        "description": "Tag Values"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_A5",
      "metadata": {
        "description": "Virtual Machine Size"
      }
    },

    "imagePublisher": {
      "type": "string",
      "defaultValue": "hortonworks",
      "metadata": {
        "description": "Virtual Machine Image Publisher"
      }
    },
    "imageOffer": {
      "type": "string",
      "defaultValue": "hortonworks-sandbox",
      "metadata": {
        "description": "Virtual Machine Image Offer"
      }
    },
    "imageSKU": {
      "type": "string",
      "defaultValue": "sandbox22",
      "metadata": {
        "description": "Virtual Machine Image SKU"
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "storageAccountName",
      "metadata": {
        "description": "Storage Account Name"
      }
    },
    "nicNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "Network Interface Card Prefix."
      }
    }
  },
 "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "[parameters('virtualMachines-api-version')]",
      "name": "[parameters('sandboxName')]",
      "location": "[parameters('location')]",
      "tags": {
        "[parameters('tag').key1]": "[parameters('tag').value1]"
      },
      "plan": {
        "name": "[parameters('imageSKU')]",
        "publisher": "[parameters('imagePublisher')]",
        "product": "[parameters('imageOffer')]"
      },
        "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('sandboxName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": {
          "disablePasswordAuthentication": false
          },
          "secrets": [],
        },
        "storageProfile": {
                        "imageReference": {
                            "publisher": "[parameters('imagePublisher')]",
                            "offer": "[parameters('imageOffer')]",
                            "sku": "[parameters('imageSKU')]",
                            "version": "latest"
                        },
          "osDisk": {
            "name": "[parameters('sandboxName')]",
            "vhd": {
              "uri": "[concat('http://',parameters('storageAccountName'), '.blob.core.windows.net/vhds/',parameters('sandboxName'),'-osdisk.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicNamePrefix'))]"
            }
          ]
        }
      }
    }
 ]
}
